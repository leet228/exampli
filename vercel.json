{
    "functions": {
        "api/**/*.ts": {
            "runtime": "nodejs20.x",
            "maxDuration": 30,
            "memory": 1024
        }
    },
    "rewrites": [
        { "source": "/api/(.*)", "destination": "/api/$1" },
        { "source": "/(.*)", "destination": "/index.html" }
    ]
}