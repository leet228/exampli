{
  "compilerOptions": {
    "composite": true,

    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"],
    "declaration": false
  },
  "include": ["api/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
